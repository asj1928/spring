<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
    <bean name="database" class="com.spring.demo.Database">
        <property name="name" value="data1"/>
        <property name="port" value="1010"/>
    </bean>

    <bean name="Tea" class="com.spring.demo.Tea"/>

    <bean name="ExpressTea" class="com.spring.demo.ExpressTea"/>

    <bean name="TeaRestaurant" class="com.spring.demo.Restaurant">
        <property name="hotDrink" ref="Tea"/>
    </bean>

        <bean name="expressTeaRestaurant" class="com.spring.demo.Restaurant">
        <property name="hotDrink">
            <bean class="com.spring.demo.ExpressTea"/>
        </property>
    </bean>

    <bean name="complexBean" class="com.spring.demo.Complex">
        <property name="list">
            <list>
                <value>"valueInList"</value>
                <value>25</value>
                <value>true</value>
            </list>
        </property>
        <property name="set" >
            <set>
                <value>"value in set"</value>
                <value>2456</value>
                <value>false</value>
            </set>
        </property>
        <property name="map">
            <map>
                <entry key="hello" value="value1 in a map"/>
                <entry key= "15" value="value2 in a map"/>
            </map>
        </property>
    </bean>


</beans>